# ===== TELEGRAM API =====
# Get from https://my.telegram.org
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_PHONE=+79001234567
TELEGRAM_SESSION_NAME=aura_lead_hunter

# ===== AI/LLM CONFIGURATION =====
# OpenRouter API (recommended for flexibility)
OPENROUTER_API_KEY=sk-or-v1-xxxx
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Or use OpenAI directly
# OPENAI_API_KEY=sk-xxxx
# OPENAI_BASE_URL=https://api.openai.com/v1

# Model selection
LLM_MODEL=google/gemini-2.0-flash-exp:free

# ===== SCRAPER SETTINGS =====
# Delay between actions (seconds) - for rate limiting
SCRAPE_DELAY_MIN=2.0
SCRAPE_DELAY_MAX=5.0
MESSAGES_PER_CHAT=100
JOIN_DELAY_MIN=30.0
JOIN_DELAY_MAX=60.0

# ===== TARGET CHATS =====
# Comma-separated list of chat usernames or invite links
TARGET_CHATS=crypto_signals,defi_alpha,ton_community

# ===== DATA EXPORT =====
EXPORT_DIR=./data
CSV_FILENAME=leads_export.csv

# ===== LOGGING =====
LOG_LEVEL=DEBUG
LOG_FILE=./logs/aura_hunter.log
